<form>
	<fields name="sociallogin" addfieldprefix="Joomla\Plugin\System\SocialLogin\Field">
		<fieldset name="sociallogin"
			label="PLG_SYSTEM_SOCIALLOGIN_HEADER"
		>
			<field
				name="sociallogin"
				type="sociallogin"
				label="PLG_SYSTEM_SOCIALLOGIN_FIELD_LABEL"
				description="PLG_SYSTEM_SOCIALLOGIN_FIELD_DESC"
				required="false"
				readonly="false"
				default=""
			/>

			<field name="dontremind"
				   type="radio"
				   layout="joomla.form.field.radio.switcher"
				   default="0"
				   label="PLG_SYSTEM_SOCIALLOGIN_FIELD_DONTREMIND_LABEL"
				   description="PLG_SYSTEM_SOCIALLOGIN_FIELD_DONTREMIND_DESC"
				   >
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>

		</fieldset>
	</fields>
</form>