<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4.0" type="plugin" group="sociallogin" method="upgrade">
    <name>PLG_SOCIALLOGIN_FACEBOOK</name>
    <version>##VERSION##</version>
    <creationDate>##DATE##</creationDate>

    <author>Akeeba Ltd</author>
    <authorEmail>no-reply@akeebabackup.com</authorEmail>
    <authorUrl>https://www.akeebabackup.com</authorUrl>

    <copyright>Copyright (c)2016-2017 Akeeba Ltd</copyright>
    <license>GNU GPL v3 or later</license>

    <description>PLG_SOCIALLOGIN_FACEBOOK_DESCRIPTION</description>

    <files>
        <filename plugin="facebook">facebook.php</filename>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_sociallogin_facebook.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_sociallogin_facebook.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="appid"
                        type="text"
                        label="PLG_SOCIALLOGIN_FACEBOOK_FIELD_APPID_LABEL"
                        description="PLG_SOCIALLOGIN_FACEBOOK_FIELD_APPID_DESC"
                />

                <field
                        name="appsecret"
                        type="password"
                        label="PLG_SOCIALLOGIN_FACEBOOK_FIELD_APPSECRET_LABEL"
                        description="PLG_SOCIALLOGIN_FACEBOOK_FIELD_APPSECRET_DESC"
                />

                <field
                        name="loginunlinked"
                        type="radio"
                        label="PLG_SOCIALLOGIN_FACEBOOK_FIELD_LOGINUNLINKED_LABEL"
                        description="PLG_SOCIALLOGIN_FACEBOOK_FIELD_LOGINUNLINKED_DESC"
                        default="0"
                        class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                        name="createnew"
                        type="radio"
                        label="PLG_SOCIALLOGIN_FACEBOOK_FIELD_CREATENEW_LABEL"
                        description="PLG_SOCIALLOGIN_FACEBOOK_FIELD_CREATENEW_DESC"
                        default="0"
                        class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                        name="bypassvalidation"
                        type="radio"
                        label="PLG_SOCIALLOGIN_FACEBOOK_FIELD_BYPASSVALIDATION_LABEL"
                        description="PLG_SOCIALLOGIN_FACEBOOK_FIELD_BYPASSVALIDATION_DESC"
                        default="1"
                        class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                        name="helpurl"
                        type="text"
                        label="PLG_SOCIALLOGIN_FACEBOOK_CONFIG_HELPURL_LABEL"
                        description="PLG_SOCIALLOGIN_FACEBOOK_CONFIG_HELPURL_DESC"
                        default=""
                        filter="url"
                />
            </fieldset>
        </fields>
    </config>

</extension>